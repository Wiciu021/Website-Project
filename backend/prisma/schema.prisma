generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  author      String
  date        DateTime @default(now())
  img         String
  category    String
}

model Teacher {
  id                Int      @id @default(autoincrement())
  name              String
  surname           String
  position          String
  category          String
  img               String
}

model Album {
  id          Int      @id @default(autoincrement())
  folder      String
  title       String
  description String
  img         String
  date        DateTime
  photos      Photo[]
}

model Photo {
  id          Int      @id @default(autoincrement())
  img         String
  title       String
  description String
  date        DateTime
  albumId     Int
  album       Album    @relation(fields: [albumId], references: [id])
}

model Document {
  id          Int      @id @default(autoincrement())
  title       String
  file        String
  date        DateTime @default(now())
  category    String?
}